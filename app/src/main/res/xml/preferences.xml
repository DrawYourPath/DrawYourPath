<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="display_category"
        app:title="Display">

        <SwitchPreferenceCompat
            app:key="switch_dark_mode"
            app:title="Dark mode" />

        <Preference
            app:key="list_text_size"
            app:title="Text size" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="account_category"
        app:title="Account">

        <EditTextPreference
            app:key="modify_username"
            app:title="Modify username"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:fragment="com.epfl.drawyourpath.preferences.ModifyPasswordFragment"
            app:key="modify_password"
            app:title="Modify password" />

        <Preference
            app:key="disconnect"
            app:title="Disconnect" />

    </PreferenceCategory>

</PreferenceScreen>