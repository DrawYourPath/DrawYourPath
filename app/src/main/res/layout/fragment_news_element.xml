<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/light_border_box"
		android:orientation="vertical"
		android:paddingHorizontal="20dp"
		android:paddingVertical="20dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/TV_Title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Lorem Ipsum"
			android:textColor="@color/purple_700"
			android:textFontWeight="8000"
			android:textSize="24sp" />

		<TextView
			android:id="@+id/TV_Description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ornare massa id diam consectetur molestie vitae lobortis mauris. Maecenas accumsan tempus lorem."
			android:textColor="#222"
			android:textFontWeight="0"
			android:textSize="14sp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal">

			<Button
				android:id="@+id/BT_Action1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:layout_weight="1"
				android:text="Action 1" />

			<Button
				android:id="@+id/BT_Action2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_weight="1"
				android:text="Action 2" />
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>