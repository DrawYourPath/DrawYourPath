<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userProfileCreation.UserNameTestAndSetFragment"
    android:id="@+id/personalInfoFragment"
    android:background="@drawable/image_mountain_background"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|center"
        android:id="@+id/userName_frame"
        tools:context=".userProfileCreation.personalInfoForm.PersonalInfoFragment">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:padding="4dp"
            android:layout_margin="10dp"
            android:text="@string/to_get_to_know_you_better"
            android:textIsSelectable="false"
            android:textSize="28sp"
            android:textColor="@color/design_default_color_surface"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="40sp"
            android:id="@+id/input_firstname_text_UserProfileCreation"
            android:hint="@string/enter_your_firstname"
            android:background="@color/design_default_color_surface"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:id="@+id/firstnameError_text_userProfileCreation"
            android:text=""
            android:layout_marginLeft="60dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:textSize="40sp"
            android:id="@+id/input_surname_text_UserProfileCreation"
            android:hint="@string/enter_your_surname"
            android:background="@color/design_default_color_surface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/surnameError_text_userProfileCreation"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:text="@string/your_date_of_birth"
            android:textColor="@color/design_default_color_surface"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            tools:context=".userProfileCreation.personalInfoForm.PersonalInfoFragment">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:textSize="30dp"
                android:background="@color/design_default_color_surface"
                android:text="@string/empty_date_view"
                android:id="@+id/showDate_text_userProfileCreation" />

            <Button
                android:id="@+id/selectDate_button_userProfileCreation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/select_a_date" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:id="@+id/dateError_text_userProfileCreation"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/setPersonalInfo_button_userProfileCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="80dp"
        android:text="Validate"
        android:textSize="40sp"/>

</FrameLayout>