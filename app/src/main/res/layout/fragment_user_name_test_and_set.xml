<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userProfileCreation.UserNameTestAndSetFragment"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/image_mountain_background"
        tools:context=".userProfileCreation.UserProfileCreationActivity">
        <TextView
            android:id="@+id/select_userName_title_userProfileCreation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:layout_margin="20dp"
            android:text="@string/please_enter_a_user_name"
            android:textIsSelectable="false"
            android:textSize="28sp"
            android:textColor="@color/design_default_color_surface"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/select_userName_description_userProfileCreation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:layout_margin="20dp"
            android:text="You can click on the CHECK AVAIBILITY button to check if your proposition is available. After you click on the VALIDATE button your user name is fixed."
            android:textIsSelectable="false"
            android:textSize="15sp"
            android:textColor="@color/design_default_color_surface"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70sp"
            android:textSize="40sp"
            android:id="@+id/input_userName_text_UserProfileCreation"
            android:hint="@string/user_name"
            android:background="@color/design_default_color_surface"
            />

        <Button
            android:id="@+id/testUserName_button_userProfileCreation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test_availability" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:id="@+id/testUserName_text_userProfileCreation"
            android:layout_marginLeft="60dp"/>

        <Button
            android:id="@+id/setUserName_button_userProfileCreation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:text="Validate"
            android:textSize="40sp"/>
        </LinearLayout>

</FrameLayout>